<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/lnhavemessageunreadoffline"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView   android:scrollbars="none"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvuserunreadoffline"></ListView>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/lnnohavemessageunreadoffline"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.daasuu.bl.BubbleLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:bl_arrowDirection="bottom"
            app:bl_arrowHeight="10dp"
            app:bl_arrowPosition="10dp"
            app:bl_arrowWidth="10dp"
            app:bl_bubbleColor="#2a45ba"
            app:bl_cornersRadius="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empty"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#ffffff"/>

        </com.daasuu.bl.BubbleLayout>

    </RelativeLayout>


</RelativeLayout>