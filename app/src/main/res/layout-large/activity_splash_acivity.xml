<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    android:background="@drawable/loginimggb"

    tools:context="com.techhub.chatadminnodejs.SplashAcivity">


    <ImageView
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="10%"
        android:layout_below="@+id/imageView"

        android:id="@+id/imageView2"
        app:layout_widthPercent="10%"
        app:layout_heightPercent="10%"
        android:src="@drawable/iconpass"
        />

    <EditText

        app:layout_marginTopPercent="3%"
        android:layout_below="@+id/imageView"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="10%"
        android:id="@+id/edtpass"
        android:layout_toRightOf="@+id/imageView2"

        android:hint="*******"
        android:inputType="textPassword"

        />






    <com.dd.CircularProgressButton
        android:id="@+id/btnlogin"

        app:cpb_cornerRadius="2dp"
        app:cpb_textError="False"
        app:cpb_textComplete="Complete"
        app:cpb_textIdle="Login"
        app:layout_widthPercent="82%"
        app:layout_marginLeftPercent="9%"
        android:layout_below="@+id/imageView2"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="5%"



        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        />











    <ImageView
        android:id="@+id/imageView"
        app:layout_marginTopPercent="35%"
        app:layout_marginLeftPercent="10%"
        app:layout_widthPercent="10%"
        app:layout_heightPercent="10%"


        android:src="@drawable/iconuser"
        />

    <EditText
        android:id="@+id/edtemail"
        app:layout_widthPercent="70%"
        app:layout_marginTopPercent="35%"
        android:layout_toRightOf="@+id/imageView"
        app:layout_heightPercent="10%"

        android:hint="Email"
        android:inputType="textEmailAddress"

        />


</android.support.percent.PercentRelativeLayout>

